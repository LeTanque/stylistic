{
  "author": "letanque",
  "name": "stylistic-letanque",
  "description": "stylistic by letanque",
  "version": "0.0.1",
  "manifest_version": 2,
  "update_url": "https://github.com/letanque/stylistic",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Stylistic~~~",
    "default_popup": "views/background.html"
  },
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "js/in-content.js",
        "js/injectStyles.js"
      ],
      "css": [
        "styles/compiled.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_security_policy": "default-src 'self'; script-src-elem 'self' 'unsafe-inline' https://unpkg.com; img-src * data: 'self' https://lh6.googleusercontent.com ; child-src chrome-search://most-visited/ https://*.google.com/ ;",
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  "web_accessible_resources": [
    "js/injectStyles.js"
  ]
}